<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateGoalFragment_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout_createGoalFragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_createGoalFragment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/toolbar_cancel_icon">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_toolbar_cancel_create_goal_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="#AAAAAA"
                        android:textFontWeight="700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:textAllCaps="true" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/linear_layout_create_goal_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundTintGrey"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="18dp"
                    android:letterSpacing="-0.02"
                    android:text="STEP ONE"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="TELL US ABOUT YOUR "
                        android:textColor="@color/colorTextDarkGray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="GOALS"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/progress_rectangle_selected"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/progress_rectangle_unselected"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/progress_rectangle_unselected"/>

                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_btn_gray"
                android:hint="Enter Goal"
                app:boxBackgroundColor="@color/lightGray"
                app:startIconDrawable="@drawable/ic_baseline_outlined_flag_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_goalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_btn_gray"
                android:hint="How much do you need?"
                app:boxBackgroundColor="@color/lightGray"
                app:startIconDrawable="@drawable/ic_baseline_attach_money_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_goalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@drawable/header_background_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="26dp"
                    android:text="Category"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextDarkGray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/categories_toggleGrp"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                app:singleSelection="false"
                app:selectionRequired="false">

                <Button
                    android:id="@+id/btn_career"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Career"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textAllCaps="false"
                    android:layout_weight="0.5"
                    style="?attr/materialButtonOutlinedStyle"/>

                <Button
                    android:id="@+id/btn_family"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Family"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textAllCaps="false"
                    android:layout_weight="0.5"
                    style="?attr/materialButtonOutlinedStyle"/>

                <Button
                    android:id="@+id/btn_leisure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Leisure"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textAllCaps="false"
                    android:layout_weight="0.5"
                    style="?attr/materialButtonOutlinedStyle"/>


            </com.google.android.material.button.MaterialButtonToggleGroup>


