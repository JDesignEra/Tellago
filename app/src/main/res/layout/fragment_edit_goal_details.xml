<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditGoalDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout_edit_goal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_edit_goal_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorBackground"
                app:title="Edit Goal Details" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout_editgoaldetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout_edit_goal_details">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:endIconMode="clear_text"
                android:hint="Title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/tv_goalID_edit_gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_targetAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Target Amount"
                app:endIconMode="clear_text"
                app:prefixText="$">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_targetAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_currentAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Current Amount"
                app:endIconMode="clear_text"
                app:prefixText="$">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_currentAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="@color/colorPrimary"
                app:endIconMode="custom"
                app:endIconContentDescription="Edit deadline"
                android:hint="Deadline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInput_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:text="30/12/2020" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Reminder Frequency"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radioGrp_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/radioBtn_NoneReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-6dp"
                    android:layout_marginEnd="5dp"
                    android:checked="true"
                    android:text="None" />

                <RadioButton
                    android:id="@+id/radioBtn_3MonthsReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="3 Months"/>

                <RadioButton
                    android:id="@+id/radioBtn_6MonthsReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="6 Months"/>

            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Categories"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGrp_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_career"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Career"
                    app:chipIcon="@drawable/ic_baseline_work_24"
                    app:chipIconVisible="true"
                    app:checkedIcon="@drawable/ic_baseline_work_24"
                    app:checkedIconTint="@color/colorPrimary"
                    app:checkedIconVisible="true"
                    app:iconStartPadding="5dp"
                    app:iconEndPadding="-2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_family"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family"
                    app:chipIcon="@drawable/ic_family_restroom_24"
                    app:chipIconVisible="true"
                    app:checkedIcon="@drawable/ic_family_restroom_24"
                    app:checkedIconTint="@color/colorPrimary"
                    app:checkedIconVisible="true"
                    app:iconStartPadding="5dp"
                    app:iconEndPadding="-2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_leisure"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leisure"
                    app:chipIcon="@drawable/ic_baseline_local_airport_24"
                    app:chipIconVisible="true"
                    app:checkedIcon="@drawable/ic_baseline_local_airport_24"
                    app:checkedIconTint="@color/colorPrimary"
                    app:checkedIconVisible="true"
                    app:iconStartPadding="5dp"
                    app:iconEndPadding="-2dp"/>

            </com.google.android.material.chip.ChipGroup>
        
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_editgoaldetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_DeleteGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/colorPrimary"
                android:text="Delete Goal"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ConfirmEditGoalDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorUnderlyingBackground"
                android:text="Confirm Edit"
                android:textColor="@color/colorTextBlack"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>