<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreatePostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout_create_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_create_post"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorWhiteBackground"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/toolbar_back_icon"
                app:title="Create New Post">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_layout_create_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_view_create_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/toolbar_add_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_create_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Post"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/image_view_create_post"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textAllCaps="true" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:id="@+id/linear_layout_create_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/header_background_rectangle">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginVertical="4dp"
                    android:text="Attach Journeys To This Post"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextDarkGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:id="@+id/textView_jid_from_bundle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_journey_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_AddJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:letterSpacing="0.03"
                android:text="Attach Journey(s)"
                android:textSize="14sp"
                android:textStyle="italic"
                app:backgroundTint="@color/colorPrimaryLight"
                app:cornerRadius="5dp"
                app:icon="@drawable/ic_baseline_directions_walk_24" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/header_background_rectangle">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginVertical="4dp"
                    android:text="Type Of Post"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextDarkGray"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGrp_post_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_message_radioToggle"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        app:checkedIcon="@drawable/ic_baseline_textsms_24"
                        app:checkedIconTint="@color/colorPrimary"
                        app:checkedIconVisible="true"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipIcon="@drawable/ic_baseline_textsms_24"
                        app:chipIconVisible="true"
                        app:iconEndPadding="-1dp"
                        app:iconStartPadding="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_multimedia_radioToggle"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image"
                        app:checkedIcon="@drawable/ic_baseline_image_24"
                        app:checkedIconTint="@color/colorPrimary"
                        app:checkedIconVisible="true"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipIcon="@drawable/ic_baseline_image_24"
                        app:chipIconVisible="true"
                        app:iconEndPadding="-1dp"
                        app:iconStartPadding="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_poll_radioToggle"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poll"
                        app:checkedIcon="@drawable/ic_baseline_poll_24"
                        app:checkedIconTint="@color/colorPrimary"
                        app:checkedIconVisible="true"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipIcon="@drawable/ic_baseline_poll_24"
                        app:chipIconVisible="true"
                        app:iconEndPadding="-1dp"
                        app:iconStartPadding="1dp" />


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_messageBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_btn_gray"
                android:hint="Write a message ..."
                android:textAlignment="center"
                android:visibility="visible"
                app:boxBackgroundColor="@color/lightGray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PostMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:maxLines="7" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/attach_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_android_photo"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_attachMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:text="Add Image"
                android:textColor="@color/colorLinkBlue"
                android:textSize="18sp"
                android:visibility="gone" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout_pollQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/rounded_btn_gray"
                android:hint="Create a poll ..."
                android:textAlignment="center"
                android:visibility="gone"
                app:boxBackgroundColor="@color/lightGray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PollQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:maxLines="8" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_poll_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Add Poll Option"
                android:textColor="@color/colorTextBlack"
                android:visibility="gone"
                app:backgroundTint="@color/colorUnderlyingBackground" />


            <LinearLayout
                android:id="@+id/linear_layout_option_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_layout_poll_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:visibility="gone">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_poll_remove_buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>