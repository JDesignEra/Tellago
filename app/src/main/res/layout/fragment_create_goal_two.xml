<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateGoalFragmentTwo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_FragmentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="150dp"
            android:paddingBottom="100dp"
            android:text="This is Fragment 2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_FragmentTwoReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:text="This is from previous Fragment"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_FragmentTwo" />

        <EditText
            android:id="@+id/et_FragmentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Send something to Fragment TWO"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_FragmentTwoReceipt" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_FragmentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorUnderlyingBackground"
            android:text="Next Fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_FragmentTwo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>