<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateGoalFragment_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout_createGoalFragment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_createGoalFragment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhiteBackground"
                android:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/toolbar_cancel_icon">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_toolbar_cancel_create_goal_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="#AAAAAA"
                        android:textFontWeight="700"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:textAllCaps="true" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/linear_layout_create_goal_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="100dp"
            android:clipChildren="false"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundTintGrey"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="18dp"
                    android:letterSpacing="-0.02"
                    android:text="STEP TWO"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="LET'S DIVE "
                        android:textColor="@color/colorTextDarkGray"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="DEEPER..."
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/progress_rectangle_selected" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/progress_rectangle_selected" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/progress_rectangle_unselected" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_Bucket_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.02"
                android:text="Whatchu need to achieve this goal?"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Bucket_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:elevation="10dp"
                android:letterSpacing="-0.02"
                android:padding="10dp"
                android:text="CREATE LIST"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="5dp"
                app:icon="@drawable/ic_baseline_list_24"
                app:iconGravity="textEnd" />

            <TextView
                android:id="@+id/tv_target_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.02"
                android:text="What is your target duration?"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/linear_layout_target_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mtv_year_add_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:letterSpacing="-0.02"
                        android:text="YEAR(s)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/number_picker_target_duration_year"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:descendantFocusability="blocksDescendants"
                        android:elevation="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mtv_month_add_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.02"
                        android:text="MONTH(s)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/number_picker_target_duration_month"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="20sp"
                        android:descendantFocusability="blocksDescendants" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.02"
                android:text="Need reminders? We gotchu!"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroup_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radiobutton_reminder_0mth"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/checkbox_selection"
                    android:button="@color/colorTransparent"
                    android:checked="true"
                    android:letterSpacing="-0.02"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="None"
                    android:textAlignment="center"
                    android:textColor="@drawable/checkbox_text_selection"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radiobutton_reminder_3mth"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/checkbox_selection"
                    android:button="@color/colorTransparent"
                    android:letterSpacing="-0.02"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="3 Months"
                    android:textAlignment="center"
                    android:textColor="@drawable/checkbox_text_selection"
                    android:textSize="16sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radiobutton_reminder_6mth"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/checkbox_selection"
                    android:button="@color/colorTransparent"
                    android:letterSpacing="-0.02"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="6 Months"
                    android:textAlignment="center"
                    android:textColor="@drawable/checkbox_text_selection"
                    android:textSize="16sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ToFragmentOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:letterSpacing="-0.02"
                    android:padding="10dp"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDarkGray"
                    android:textSize="14sp"
                    app:backgroundTint="@color/superlightgray"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/ic_baseline_arrow_back_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/colorTextDarkGray" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ToFragmentThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:letterSpacing="-0.02"
                    android:padding="10dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/ic_baseline_arrow_forward_24"
                    app:iconGravity="textEnd" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>