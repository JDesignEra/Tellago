<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bucket_list_item_tab_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_tabLayout_bucketListItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_tabLayout_bucketListItems"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBackground"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back_36"
            app:title="Bucket List Items" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout_bucketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout_tabLayout_bucketListItems"
        app:layout_constraintBottom_toTopOf="@id/tab_layout_ShowBucketListItemsTabsFragment">

        <TextView
            android:id="@+id/tv_goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal Your Goal "
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:letterSpacing="-0.02"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" GOAL"
            android:textColor="@color/colorTextDarkGray"
            android:textSize="17sp"
            android:letterSpacing="-0.02"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_ShowBucketListItemsTabsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_bucketTitle"
        app:layout_constraintBottom_toTopOf="@+id/view_pager_ShowBucketListItemsTabsFragment"
        app:tabInlineLabel="true">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongoing"
            android:icon="@drawable/ic_grid_on_72" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_item_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:icon="@drawable/ic_baseline_waves_72" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_ShowBucketListItemsTabsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout_ShowBucketListItemsTabsFragment"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_bucketListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_baseline_add_48_white"
        app:tint="@color/colorBackground"
        app:maxImageSize="32dp"
        app:rippleColor="@color/colorBackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>