<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_bucket_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_bucket_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorUnderlyingBackground"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/iv_bucketList_Icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/goal_icon_shape"
                android:scaleType="centerInside"
                android:src="@drawable/ic_android_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/linear_layout_bucket_list_item"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="5"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_bucketListItem_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_bucketList_Title"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:maxLines="2"
                    android:text="Title"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_ShowBucketItemDetails"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorBackground"
                    app:icon="@drawable/ic_edit_18"
                    app:iconTint="@color/colorSuccess" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>