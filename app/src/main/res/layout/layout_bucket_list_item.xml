<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_bucket_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_bucket_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorUnderlyingBackground"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/iv_bucketList_Icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/goal_icon_shape"
                android:scaleType="centerInside"
                android:src="@drawable/ic_android_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linear_layout_bucket_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bucketListItem_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:visibility="gone"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_bucketList_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="16sp"
                    />



                <LinearLayout
                    android:id="@+id/linear_bucket_list_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ShowBucketItemDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBackground"
                        android:layout_marginRight="12dp"
                        android:text="Details"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="12sp" />

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btn_CompleteBucketItem"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignEnd="@id/btn_ShowBucketItemDetails"-->
<!--                        android:backgroundTint="@color/colorSuccess"-->
<!--                        android:text="Complete"-->
<!--                        android:textColor="@color/colorTextBlack"-->
<!--                        android:textSize="12sp" />-->


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>