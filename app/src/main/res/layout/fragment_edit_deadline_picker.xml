<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="30dp"
    tools:context=".fragments.EditDeadlinePickerFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/numPick_year"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="8dp" />

            <NumberPicker
                android:id="@+id/numPick_month"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="8dp" />

            <NumberPicker
                android:id="@+id/numPick_day"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="8dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="Year(s)"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="Month(s)"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Day(s)"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_datechangedisplay_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change!"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_deadline_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:text="Confirm"
        app:backgroundTint="@color/colorPrimaryLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>